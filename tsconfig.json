{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "#config/*": ["./config/*"],
      "#plugins/*": ["./plugins/*"],
      "#db/*": ["./db/index.js"],
      "#schemas/*": ["./schemas/index.js"],
      "#auth/*": ["./modules/auth/*"],
      "#rcon/*": ["./modules/rcon/*"],
      "#ws/*": ["./modules/ws/*"]
    }
  },
  "exclude": ["node_modules"]
}
